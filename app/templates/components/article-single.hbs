<header>
  {{lazy-image url=article.featured.url alt=article.title}}
</header>

<article class="article-read">
  {{#unless preview}}
    {{category-label category=category}}
  {{/unless}}
  <h2 class="article-title">
    {{#link-to 'articles.category.article' article.slug}}
      {{article.title}}
    {{/link-to}}
  </h2>
  <h3 class='article-author'>
    {{contributors-names article.contributors}}
  </h3>
  <div class="article-intro">
    {{{article.excerpt}}}
  </div>
  {{#unless preview}}
    {{social-widget text=article.socialText}}
    <div class="article-content">
      {{{article.content}}}
    </div>
    {{social-widget text=article.socialText}}
  {{/unless}}

  {{#if preview}}
    {{#link-to 'articles.category.article' article.slug class="read-more"}}
      Seguir leyendo &raquo;
    {{/link-to}}
  {{/if}}
</article>
